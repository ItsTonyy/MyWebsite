---
interface Props {
  src: string;
  class?: string;
}

const { src, class: className = "" } = Astro.props;
---

<video class={className} autoplay loop muted playsinline>
  <source src={src} type="video/webm" />
</video>

<style>
  video {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>
