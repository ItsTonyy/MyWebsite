---
import { SITE } from "../consts";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{SITE.NAME}</title>
  </head>
  <body class="bg-fundo text-texto m-0 w-full min-h-full">
    <div class="relative min-h-screen">
      <!-- Linhas verticais (laterais) -->
      <div
        class="absolute top-0 bottom-0 w-px bg-gray-400/25 pointer-events-none left-[clamp(16px,5vw,80px)]"
      >
      </div>
      <div
        class="absolute top-0 bottom-0 w-px bg-gray-400/25 pointer-events-none right-[clamp(16px,5vw,80px)]"
      >
      </div>

      <Header />

      <!-- Linha horizontal após header com estrelas -->
      <div class="relative w-full flex items-center">
        <span
          class="absolute text-[1.2rem] text-gray-400/50 pointer-events-none top-0 leading-0 -translate-x-1/2 -translate-y-1/2 left-[clamp(16px,5vw,80px)]"
          >✦</span
        >
        <div class="flex-1 h-px bg-gray-400/25 pointer-events-none"></div>
        <span
          class="absolute text-[1.2rem] text-gray-400/50 pointer-events-none top-0 leading-0 -translate-x-1/2 -translate-y-1/2 left-[calc(100%-clamp(16px,5vw,80px))]"
          >✦</span
        >
      </div>

      <main>
        <slot />
      </main>

      <!-- Linha horizontal antes do footer com estrelas -->
      <div class="relative w-full flex items-center">
        <span
          class="absolute text-[1.2rem] text-gray-400/50 pointer-events-none top-0 leading-0 -translate-x-1/2 -translate-y-1/2 left-[clamp(16px,5vw,80px)]"
          >✦</span
        >
        <div class="flex-1 h-px bg-gray-400/25 pointer-events-none"></div>
        <span
          class="absolute text-[1.2rem] text-gray-400/50 pointer-events-none top-0 leading-0 -translate-x-1/2 -translate-y-1/2 left-[calc(100%-clamp(16px,5vw,80px))]"
          >✦</span
        >
      </div>

      <Footer />
    </div>
  </body>
</html>
